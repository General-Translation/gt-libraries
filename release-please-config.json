{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "node",
  "pull-request-title-pattern": "chore${scope}: release${component} ${version}",
  "pull-request-header": "Release PR for GT Libraries",
  "pull-request-footer": "This PR was created by GitHub Actions",
  "packages": {
    "packages/cli": {
      "release-type": "node"
    },
    "packages/core": {
      "release-type": "node"
    },
    "packages/next": {
      "release-type": "node"
    },
    "packages/react": {
      "release-type": "node"
    },
    "packages/supported-locales": {
      "release-type": "node"
    }
  }
}
